
<div class="tab-content card" id="nav-tabContent">
    <div class="tab-pane fade show active" id="search-md" role="tabpanel" aria-labelledby="search-tab-md">
        <!-- Story Search -->
        <section class="card">
            <div class="card-body">
                <table style="width: 100%">
                    <tr>
                        <td style="text-align: left;">
                            <h4 class="title_section">Stories Module</h4>
                        </td>
                        <td style="text-align: right;">
                            <a class="btn btn-primary" href="/admin/story/add/">&raquo; Add New Story</a>
                        </td>
                    </tr>
                </table>
            </div>
        </section>

        <section class="card">
            <div class="card-body">
                <table id="storiesTable" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>UserName</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each stories}}
                            <tr>
                                <td>{{_id}}</th>
                                <td>{{Name}}</th>
                                <td>{{UserName}}</td>
                                <td>{{description}}</td>
                                <td>{{status}}</td>
                                <td>
                                    <a href="/admin/story/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                                    <a href="/admin/story/delete/{{_id}}"><i class="fas fa-trash" style="color:red"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#storiesTable').DataTable();
                    });
                </script>
            </div>
        </section>

        <!-- Story Search -->

    </div>
</div>