<!-- Modal Add Mentors -->
<div class="modal fade" id="staticBackdropMentors" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabelMentors" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="vertical-align: middle;">
                <h3 class="modal-title" id="staticBackdropLabelMentors" style="font-weight: 400;">Add Mentor</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <section class="my-2">
                    <table style="width: 100%;">
                        <tr>
                            <td style="text-align: left;">
                                <div class="form-group">
                                    <label for="mentor_email">Email</label>
                                    <input type="text" class="form-control" id="mentor_email">
                                </div>
                                <div class="form-group">
                                    <label for="mentor_rol">Rol</label>
                                    <select name="mentor_rol" id="mentor_rol" class="form-control">
                                        <option value="">- select - </option>
                                        <option value="1">Mentor</option>
                                        <option value="2">Intern</option>
                                    </select>
                                </div>
                            </td>
                        </tr>
                    </table>
                </section>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary rounded">Add</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Add Mentors -->

