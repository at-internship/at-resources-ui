<!-- Modal Add Teams -->
<div class="modal fade" id="staticBackdropTeams" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabelTeams" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="vertical-align: middle;">
                <h3 class="modal-title" id="staticBackdropLabelTeams" style="font-weight: 400;">Add Teams</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <section class="my-2">
                    <table style="width: 100%;">
                        <tr>
                            <td style="text-align: left;">
                                <div class="form-group">
                                    <label for="user_email">Email</label>
                                    <input type="text" class="form-control" id="user_email">
                                </div>
                                <div class="form-group">
                                    <label for="user_rol">Rol</label>
                                    <select name="user_rol" id="user_rol" class="form-control">
                                        <option value="">- select - </option>
                                        <option value="1">Mentor</option>
                                        <option value="2">Intern</option>
                                    </select>
                                </div>
                            </td>
                        </tr>
                    </table>
                </section>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary rounded">Add</button>
            </div>
        </div>
    </div>
